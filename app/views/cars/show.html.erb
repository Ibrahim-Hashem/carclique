<div class="container mt-5">
  <div class="row">
    <div class="col-sm-8 border p-3">
      <div>
        <% @car.photos.each do |photo| %>
          <%= cl_image_tag photo.key,class: "car_show_image", crop: :fill %>
        <% end %>
      </div>
    </div>

    <div class="col-sm-4 border p-3 ">
      <div class="car_show_details mb-5">
        <h2><%= @car.make %> <strong><%=@car.model %></strong></h2>
        <h6><%= @car.year %></h6>
        <h6><%= @car.registration %></h6>
        <h2>£<%= @car.price %></h2>
      </div>
      <div id="map"
       style="width: 100%; height: 300px; box-shadow: 0 0 15px rgba(0,0,0,0.2); margin-top: 80px; margin: 0 auto;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>

  <div class="car-description-showpg border p-3 m-3">
    <h2>Description</h2>
    <p><%= @car.description %></p>
  </div>

  <div class="create-a-bid-div border m-4 p-4">
    <p></p>
    <% @car.transactions.last(1).each do |t| %>
      <h6 class="my-4"><strong>Highest Bid:</strong> £<%= t.amount %></h6>
    <% end %>

    <%= simple_form_for [@car, @transaction] do |f| %>
      <%= f.input :amount, input_html: {min: @car.price, value: @car.price } %>
      <%= f.submit "create bid" %>
    <% end %>
  </div>


 </div>


