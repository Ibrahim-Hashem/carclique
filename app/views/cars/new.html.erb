<h2>Add A car listing</h2>
<%= simple_form_for @car do |f| %>
  <%= f.input :reference, label: 'Car PCP reference number', error: 'Refernce number is mandatory, please specify one' %>
  <%= f.input :price, label: "Car outstanding PCP balance", error: 'Outstanding balance is mandatory' %>
  <%= f.input :make, label: "Car make", error: 'Make is mandatory' %>
  <%= f.input :model, label: "Car model", error: 'Model is mandatory' %>
  <%= f.input :registration, label: "Car registration", error: 'registration is mandatory' %>
  <%= f.input :finance_provider, label: "finance provider", error: 'This is mandatory' %>

  <%= f.input :photo, as: :file %>
  <%= f.button :submit %>
<% end %>
