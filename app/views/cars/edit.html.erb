<div class="container pt-5">
  <div class="listing-pg pt-3">
    <div class="row">
      <div class="col-12 border m-4 p-4 box-shadow">

       <div class="d-flex w-100 justify-content-between align-items-center">
         <h2>Edit listing</h2>
         <!--  change this class name to button ibrahim has made -->
         <div class=" btn-back " >
           <%= link_to 'Back to profile', user_path(current_user) %>
         </div>
       </div>

          <%= simple_form_for @car do |f| %>
          <% @car_makes_form = ["BMW", "AUDI", "MERCEDES", "ABARTH", "ALFA ROMEO", "ASTON MARTIN"] %>
          <% @car_year_form = ["2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007","2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020"] %>
          <div class="row">
            <div class="col">
              <%= f.input :make, :collection => @car_makes_form, prompt: 'Select a make', error: 'Make is mandatory, please specify one' %>
            </div>
            <div class="col">
              <%= f.input :model, label: "Car model", placeholder: 'Input your car model', error: 'Model is mandatory, please specify one' %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <%= f.input :year, :collection => @car_year_form, prompt: 'Select a year', error: 'Car year is mandatory, please specify one' %>
            </div>
            <div class="col">
              <%= f.input :registration, label: "Car registration", placeholder: 'e.g. NO12 MUI', error: 'registration is mandatory' %>
            </div>
          </div>

          <div class="row justify-content-center border radio-button-field p-3">
            <div class="col">
              <%= f.input :fuel_type, label: 'Car fuel type', collection: [ ['Diesel' ], ['Petrol'] ], as: :radio_buttons, label_method: :last, value_method: :first, checked: @car.fuel_type, error: 'Fuel type is mandatory, please specify one' %>
            </div>
            <div class="col">
              <%= f.input :transmission, label: 'Car transmission type', collection: [ ['Manual' ], ['Automatic'] ], as: :radio_buttons, label_method: :last, value_method: :first, checked: @car.transmission, error: 'Car transmission is mandatory, please specify one' %>
            </div>
            <div class="col">
              <%= f.input :hpi_clear, label: "Is your car HPI clear?", collection: [ ['Yes' ], ['No'] ], as: :radio_buttons, label_method: :last, value_method: :first, checked: @car.hpi_clear, error: 'This is mandatory, please specify' %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <%= f.input :engine_size, label: "Car Engine size", placeholder: 'Input the cars engine size', error: 'Engine size is mandatory' %>
            </div>
            <div class="col">
              <%= f.input :colour, label: "Car colour", placeholder: 'e.g Red', error: 'colour is mandatory, please specify one' %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <%= f.input :price, label: "Car outstanding PCP balance", placeholder: 'Â£10000', error: 'Outstanding balance is mandatory, please specify one' %>
            </div>
            <div class="col">
              <%= f.input :address, label: "Car address", placeholder: 'e.g 138 Kingsland Road, London' %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <%= f.input :reference, label: 'Car PCP reference number', placeholder: 'e.g *********', error: 'Refernce number is mandatory, please specify one' %>
            </div>
            <div class="col">
              <%= f.input :finance, label: "Finance Provider", placeholder: 'Name and Address', error: 'This is mandatory, please specify one' %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <%= f.input :description, label: "Car description", placeholder: 'Provide a description of your car, including all features...' %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <%= f.input :photos, as: :file, input_html: { multiple: true } %>
              <%= f.button :submit, class: "btn-main" %>
              <% end %>
            </div>
          </div>
      </div>
      <!-- form ends -->
    </div>
  </div>
</div>
