
<div class="simple-form bg-white border container mt-5 mb-5 p-4">
  <%= simple_form_for :search, url: cars_path, method: :get do |f|%>
  <div class="row">
    <div class="col-4">
      <%= f.input :make, collection: @cars_all.map(&:make).uniq %>
    </div>
    <div class="col-4">
      <%= f.input :model, collection: @cars_all.map(&:model).uniq %>
    </div>
    <div class="col-4">
      <%= f.input :engine_size, collection: @cars_all.map(&:engine_size).uniq%>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <%= f.input :year, collection: @cars_all.map(&:year).uniq%>
    </div>
    <div class="col-4">
      <%= f.input :fuel_type, collection: @cars_all.map(&:fuel_type).uniq%>
    </div>
    <div class="col-4">
      <%= f.input :price, collection: @cars_all.map(&:price).uniq%>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
    <%= f.input :transmission, collection: @cars_all.map(&:transmission).uniq%>
    </div>
    <div class="col-4">
    <%= f.input :colour, collection: @cars_all.map(&:colour).uniq%>
    </div>
    <div class="col-4 d-flex justify-content-center text-align-center">
    <%= f.submit "Search", class: "btn btn-primary h-50 my-4" %>
    </div>
  </div>
  <% end %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <% @cars.each do |car| %>
      <div class="col-4 d-flex justify-content-center">
          <div class="card m-3 p-3">
            <%= link_to car_path(car) do %>
              <% if car.photos.first %>
                <%= cl_image_tag car.photos.first.key, height: 300, width: 400, crop: :fill %>
              <% end %>
              <%= car.make %>
              <%= car.model %>
              <%= car.price %>
            <% end %>
          </div>
      </div>
    <% end %>
  </div>
</div>
