<%= simple_form_for :search, url: cars_path, method: :get do |f|%>
  <%= f.input :query_make, collection: @cars.map(&:make).uniq %>
  <%= f.input :query_model, collection: @cars.map(&:model).uniq %>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>

<% @cars.each do |car|%>
  <%= car.make %>
  <%= car.model %>
<% end %>

